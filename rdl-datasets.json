---
---
[{% for dataset in site.datasets %}
  {
    "title": {{ dataset.title | jsonify }},
    "organization": {{ dataset.organization | jsonify }},
    {% if dataset.abstract != "" %}"abstract": {{ dataset.abstract | jsonify }},{% endif %}
    {% if dataset.notes != "" %}"notes": {{ dataset.notes | jsonify }},{% endif %}
    "category": {% if dataset.risk_data_type[0] %}
      [{% for cat in dataset.risk_data_type %}
          {{ cat | capitalize | jsonify }}{% unless forloop.last %}, {% endunless %}
        {% endfor %}]
        {% else %} {{ "None" | jsonify }}
    {% endif %},
    {% if site.data.licenses[dataset.license] %}
      "license_display": {{ site.data.licenses[dataset.license] | jsonify }},
      "license": {{ dataset.license | jsonify }},
    {% elsif dataset.license %}
      "license_display": {{ dataset.license | jsonify }},
      "license": {{ dataset.license | jsonify }},
    {% else %}
      "license_display": {{ "None" | jsonify }},
      "license": {{ "None" | jsonify }},
    {% endif %}
    "organization": {{dataset.organization | jsonify}},
    "source": {{dataset.source | jsonify}},
    "model_date": {{dataset.model_date | jsonify}},
    "geo_coverage": {% if dataset.spatial.countries[0] %} 
        [{% for geo in dataset.spatial.countries %}
          {{ site.data.ISO3[geo] | jsonify }}{% unless forloop.last %}, {% endunless %}
        {% endfor %}] 
      {% else %} 
        {% if dataset.spatial.scale == 'global' %} 
          {{ site.data.ISO3.GLO | jsonify }} 
        {% endif %}
      {% endif %},
    "geo_scale": {% if dataset.spatial.scale %} 
        {{ dataset.spatial.scale | capitalize | jsonify }}
      {% else %}
        {{ "None" | jsonify }}
      {% endif %},
    "url": "{{ site.baseurl }}{{ dataset.url }}",
    "resources": {{ dataset.resources | jsonify }}
  }{% unless forloop.last %},{% endunless %}{% endfor %}
]
